{
    "ui": {
        "window": {
            "width": 600,
            "height": 440,
            "title": "My Application"
        },
        "root": {
            "id": "mainContainer",
            "type": "container",
            "style": "mainContainerStyle",
            "children": [
                {
                    "id": "appBar",
                    "type": "container",
                    "style": "appBarStyle",
                    "children": [
                        {
                            "type": "label",
                            "text": "My Application",
                            "style": "titleStyle"
                        },
                        {
                            "type": "button",
                            "text": "Settings",
                            "style": "buttonStyle"
                        }
                    ]
                },
                {
                    "id": "mainContent",
                    "type": "container",
                    "style": "mainContentStyle",
                    "children": [
                        {
                            "type": "random",
                            "options": [
                                "label",
                                "button",
                                "slider"
                            ],
                            "style": "randomWidgetStyle"
                        }
                    ]
                },
                {
                    "id": "statusBar",
                    "type": "container",
                    "style": "statusBarStyle",
                    "children": [
                        {
                            "type": "label",
                            "text": "Status: OK",
                            "style": "statusLabelStyle"
                        }
                    ]
                }
            ]
        },
        "styles": {
            "mainContainerStyle": {
                "bg_color": "#FFFFFF",
                "width": 400,
                "height": 400,
                "radius": 5,
                "border_width": 2,
                "border_color": "#000000",
                "pad_all": 10
            },
            "appBarStyle": {
                "bg_color": "#333333",
                "pad_all": 5
            },
            "titleStyle": {
                "text_color": "#FF0000",
                "text_font": "FONT_DEFAULT",
                "text_letter_space": 2
            },
            "buttonStyle": {
                "bg_color": "#555555",
                "text_color": "#FFFFFF",
                "radius": 3,
                "border_width": 1,
                "border_color": "#AAAAAA"
            },
            "mainContentStyle": {
                "bg_color": "#EEEEEE",
                "pad_all": 15
            },
            "randomWidgetStyle": {
                "bg_color": "#CCCCCC",
                "border_width": 1,
                "border_color": "#888888"
            },
            "statusBarStyle": {
                "bg_color": "#222222",
                "text_color": "#FFFFFF",
                "pad_hor": 10
            },
            "statusLabelStyle": {
                "text_color": "#FFFFFF",
                "text_font": "FONT_DEFAULT"
            }
        }
    }
}