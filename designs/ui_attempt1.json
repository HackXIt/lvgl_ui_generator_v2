{
    "ui": {
        "window": {
            "width": 800,
            "height": 600,
            "title": "Sample Application"
        },
        "root": {
            "id": "mainContainer",
            "type": "container",
            "options": {
                "layout": "flex",
                "flow": "column"
            },
            "style": "mainContainerStyle",
            "children": [
                {
                    "id": "header",
                    "type": "container",
                    "options": {
                        "layout": "flex",
                        "flow": "row"
                    },
                    "style": "headerStyle",
                    "children": [
                        {
                            "type": "label",
                            "text": "Sample Application",
                            "style": "headerTitleStyle"
                        },
                        {
                            "type": "button",
                            "text": "Menu",
                            "style": "headerButtonStyle"
                        }
                    ]
                },
                {
                    "id": "contentArea",
                    "type": "container",
                    "options": {
                        "layout": "flex",
                        "flow": "row_wrap"
                    },
                    "style": "contentAreaStyle",
                    "children": [
                        {
                            "type": "random",
                            "count": 6,
                            "parent_id": "contentArea",
                            "options": [
                                "switch",
                                "button",
                                "slider"
                            ],
                            "style": "widgetStyle"
                        }
                    ]
                },
                {
                    "id": "footer",
                    "type": "container",
                    "options": {
                        "layout": "none"
                    },
                    "style": "footerStyle",
                    "children": [
                        {
                            "type": "label",
                            "text": "Status: Ready",
                            "style": "footerLabelStyle"
                        }
                    ]
                }
            ]
        },
        "styles": {
            "mainContainerStyle": {
                "bg_color": "#F0F0F0",
                "width": 800,
                "height": 600,
                "border_width": 3,
                "border_color": "#000000",
                "pad_all": 15
            },
            "headerStyle": {
                "bg_color": "#4F81BD",
                "pad_all": 10,
                "width": 800,
                "height": 70
            },
            "headerTitleStyle": {
                "text_color": "#FFFFFF",
                "text_font": "FONT_DEFAULT",
                "text_letter_space": 3
            },
            "headerButtonStyle": {
                "bg_color": "#5A5A5A",
                "text_color": "#FFFFFF",
                "radius": 5,
                "border_width": 2,
                "border_color": "#BFBFBF",
                "align": "right"
            },
            "contentAreaStyle": {
                "bg_color": "#FFFFFF",
                "pad_all": 20,
                "width": 780,
                "height": 440,
                "y": 80
            },
            "widgetStyle": {
                "bg_color": "#D9D9D9",
                "border_width": 2,
                "border_color": "#A6A6A6"
            },
            "footerStyle": {
                "bg_color": "#333333",
                "text_color": "#FFFFFF",
                "pad_hor": 20,
                "width": 800,
                "height": 50,
                "y": 550
            },
            "footerLabelStyle": {
                "text_color": "#FFFFFF",
                "text_font": "FONT_DEFAULT"
            }
        }
    }
}